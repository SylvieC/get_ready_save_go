

   
     
     <%= form_for @trip, url: user_trip_path(current_user.id,@trip.id), method: :patch  do |f| %>
     <%=f.label  :"Trip name" %><br/><br/>
      <%= f.text_field :title, placeholder: "Ireland, here I come!"%></br></br>
       <% if @trip.title == nil %>
       <%= f.submit "Enter title", class: "btn btn-info btn btn-md", id: "show_map" %>
       <% else %>
       <%= f.submit "Edit title", class: "btn btn-info btn btn-md", id: "show_map" %>
       <% end %>
     <% end %><br/>

       
 
  