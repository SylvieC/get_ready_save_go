     <%=f.label  :"Give this trip a special Title (optional)" %>
      <%= f.text_field :title, placeholder: "Ireland, here I come!"%></br></br>
       <% if @trip.title == nil %>
       <%= f.submit "enter trip title", class: "btn btn-primary btn btn-xs", id: "show_map" %>
       <% else %>
       <%= f.submit "Edit trip title", class: "btn btn-primary btn btn-xs", id: "show_map" %>
       <% end %>
     <% end %>

       
 
  